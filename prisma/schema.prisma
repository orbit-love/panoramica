// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Simulation {
  id            Int      @id @default(autoincrement())
  name          String       @unique
  url           String
  activities    Activity[]
}

model Activity {
  // core fields
  id            Int      @id @default(autoincrement())
  simulation   Simulation    @relation(fields: [simulationId], references: [id])
  simulationId Int
  timestamp   DateTime

  // activities and and parents
  // an activity's parent is the activity it replies to
  parentId Int?
  parent   Activity?    @relation("Parent", fields: [parentId], references: [id])
  activities    Activity[] @relation("Parent")
  // the source platform id for the parent activity
  sourceParentId String?

  // managing actors
  actor          String
  actorName          String?
  globalActor          String?
  globalActorName          String?

  // the id on the source platform, i.e. tweet id
  sourceId     String // put back to non-optional later
  // the activity type for an additional dimension
  sourceType   String?

  // content fields
  text         String
  textHtml     String?
  url          String?

  // member linking
  mentions     Json?

  // general properties for filtering
  tags      Json?
  // entity linking
  entities      Json?

  // debugging - the raw contents
  payload      Json?

  // don't allow the same activity twice in the same project
  // @@unique([sourceId, simulationId])
}